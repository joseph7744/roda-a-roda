    };
    gets(reg.palavras);

    ARQ = fopen("PALAVRAS.DAT","w+b");
    if(reg == NULL)
    {
        printf("\nERRO AO CRIAR PALAVRAS.DAT");
        getch();
        exit(0);
    }
    fwrite(&reg, sizeof(reg),1, Arq);
    if(ferror(Arq))
}
 
